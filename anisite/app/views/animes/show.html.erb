<% provide(:title, "Anisite | #{@anime.title}") %>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<p id="notice"><%= notice %></p>

		<p>
			<strong>Title:</strong>
			<%= @anime.title %>
		</p>

		<p>
			<strong>Year:</strong>
			<%= @anime.year %>
		</p>

		<p>
			<strong>Number of episodes:</strong>
			<%= @anime.number_of_episodes %>
		</p>

		<p>
			<%= @anime.description %>
		</p>

		<%= link_to 'Edit', edit_anime_path(@anime) %> |
		<%= link_to 'Back', animes_path %>

	</div>
</div>
