<% provide(:title, "Anisite | My Profile") %>
<div class="row">
	<p id="notice"><%= notice %></p>
	<div class="col-md-2 col-md-offset-2">
		<p>
			<strong>First name:</strong>
			<%= @user.first_name %>
		</p>

		<p>
			<strong>Surname:</strong>
			<%= @user.surname %>
		</p>

		<p>
			<strong>Email:</strong>
			<%= @user.email %>
		</p>
		<% if @user.id == session[:user_id] %>
		<%= link_to 'Edit', edit_user_path(@user) %> |
		<% end %>
		<%= link_to 'Back', :back %>
	</div>
	<div class="col-md-6">
		<% @animesseen.each do |a| %>
		<div class="col-md-4">
			<div class="anime">
				<p>
					<%= link_to a.title, a %>
					<%= @animesseen.length %></p>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>



