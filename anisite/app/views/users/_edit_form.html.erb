    <%= f.label :surname %><br>
    <%= f.text_field :surname, :placeholder => "Please enter your surname..." %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :placeholder => "Please enter your email address..." %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :placeholder => "Please enter your desired password..." %>
  </div>
<div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, :placeholder => "Please confirm your desired password..." %>
  </div>
  <div class="actions">
    <%= f.submit "Update Account", class: "btn btn-primary" %>
  </div>
